@model sanaiy.BLL.DTOs.Client.UpdateClientProfileDto
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "_ClientLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sanaiy - Edit Profile</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#0D47A1",
                        prima: {
                            50: '#E3F2FD',
                            100: '#BBDEFB',
                            500: '#2196F3',
                            600: '#1E88E5',
                            700: '#0D47A1',
                            800: '#0B3B91',
                        },
                        "background-light": "#F7F9FC",
                        "background-dark": "#121212",
                    },
                    fontFamily: {
                        display: ["Roboto", "sans-serif"],
                    },
                },
            },
        };
    </script>
    <style>
        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
        .floating-element {
            animation: float 6s ease-in-out infinite;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-display flex flex-col min-h-screen">
    
    <main class="flex-grow mt-20">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="max-w-4xl mx-auto">
                
                <!-- Breadcrumb Navigation -->
                <div class="mb-8">
                    <nav class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                        <a href="@Url.Action("Index", "Home")" class="hover:text-prima-700 dark:hover:text-prima-400 transition-colors flex items-center">
                            <i class="material-icons mr-2">home</i>
                            Home
                        </a>
                        <i class="material-icons mx-2 text-gray-400">chevron_right</i>
                        <a href="@Url.Action("Profile", "Client")" class="hover:text-prima-700 dark:hover:text-prima-400 transition-colors">Profile</a>
                        <i class="material-icons mx-2 text-gray-400">chevron_right</i>
                        <span class="text-prima-700 dark:text-prima-400 font-medium">Edit Profile</span>
                    </nav>
                </div>

                <!-- Main Card -->
                <div class="bg-white dark:bg-slate-800 rounded-lg shadow-md border border-slate-200 dark:border-slate-700 p-8 relative">
                    
                    <!-- Decorative Elements -->
                    <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-prima-700/5 to-prima-500/5 rounded-full -mr-32 -mt-32 floating-element"></div>
                    <div class="absolute bottom-0 left-0 w-48 h-48 bg-gradient-to-tr from-prima-700/5 to-prima-500/5 rounded-full -ml-24 -mb-24 floating-element" style="animation-delay: 2s;"></div>

                    <!-- Header Section -->
                    <div class="bg-gradient-to-r from-prima-700 to-prima-600 p-8 text-white relative overflow-hidden rounded-lg mb-8">
                        <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full -mr-16 -mt-16"></div>
                        <div class="absolute bottom-0 left-0 w-24 h-24 bg-white/10 rounded-full -ml-12 -mb-12"></div>

                        <div class="relative z-10">
                            <div class="flex flex-col md:flex-row md:items-center justify-between">
                                <div>
                                    <h1 class="text-3xl md:text-4xl font-bold mb-2">Edit Your Profile</h1>
                                    <p class="text-white/90">Update your personal information and preferences</p>
                                </div>
                                <div class="mt-4 md:mt-0">
                                    <div class="flex items-center bg-white/20 backdrop-blur-sm rounded-full px-4 py-2">
                                        <i class="material-icons mr-2">verified</i>
                                        <span class="text-sm">Profile Status: Active</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="EditProfile" asp-controller="Client" method="post" enctype="multipart/form-data" class="space-y-6">

                        <div asp-validation-summary="All" class="text-red-600 mb-4"></div>

                        <!-- Profile Picture Section -->
                        <div class="flex flex-col items-center space-y-6">
                            <div class="text-center">
                                <div class="relative inline-block">
                                    <img id="profileImagePreview"
                                         src="@(string.IsNullOrEmpty(Model.ProfileImagePath) ? "/images/client-default.png" : (Model.ProfileImagePath.StartsWith("/") ? Model.ProfileImagePath : "/" + Model.ProfileImagePath))"
                                         alt="Profile Picture"
                                         class="w-40 h-40 object-cover rounded-full border-4 border-white shadow-md">
                                    <div class="absolute inset-0 bg-black bg-opacity-50 rounded-full flex items-center justify-center opacity-0 hover:opacity-100 transition-opacity cursor-pointer"
                                         onclick="document.getElementById('profileImageInput').click()">
                                        <i class="material-icons text-white text-2xl">camera_alt</i>
                                    </div>
                                </div>
                                <input asp-for="ProfileImage" id="profileImageInput" type="file" accept="image/*" style="display: none;" />
                                <p class="text-slate-600 dark:text-slate-400 text-sm mt-2">Click on the image to upload a new photo</p>
                                <p class="text-slate-500 dark:text-slate-500 text-xs">Recommended: Square image, at least 400x400 pixels</p>
                            </div>
                        </div>

                        <!-- Personal Information Section -->
                        <div class="space-y-6">
                            <div class="border-b border-slate-200 dark:border-slate-700 pb-4">
                                <h3 class="text-xl font-bold text-slate-800 dark:text-slate-100 flex items-center">
                                    <i class="material-icons mr-3 text-primary">person_outline</i>
                                    Personal Information
                                </h3>
                            </div>

                            <!-- Name Fields -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <!-- First Name -->
                                <div>
                                    <label asp-for="FName" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">First Name</label>
                                    <input asp-for="FName" class="w-full border border-slate-300 rounded-md shadow-sm focus:ring-primary focus:border-primary dark:bg-slate-700 dark:border-slate-600 dark:text-slate-200" />
                                    <span asp-validation-for="FName" class="text-red-600 text-sm"></span>
                                </div>

                                <!-- Last Name -->
                                <div>
                                    <label asp-for="LName" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Last Name</label>
                                    <input asp-for="LName" class="w-full border border-slate-300 rounded-md shadow-sm focus:ring-primary focus:border-primary dark:bg-slate-700 dark:border-slate-600 dark:text-slate-200" />
                                    <span asp-validation-for="LName" class="text-red-600 text-sm"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Contact Information Section -->
                        <div class="space-y-6">
                            <div class="border-b border-slate-200 dark:border-slate-700 pb-4">
                                <h3 class="text-xl font-bold text-slate-800 dark:text-slate-100 flex items-center">
                                    <i class="material-icons mr-3 text-primary">contact_mail</i>
                                    Contact Information
                                </h3>
                            </div>

                            <!-- Phone -->
                            <div>
                                <label asp-for="Phone" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Phone Number</label>
                                <input asp-for="Phone" class="w-full border border-slate-300 rounded-md shadow-sm focus:ring-primary focus:border-primary dark:bg-slate-700 dark:border-slate-600 dark:text-slate-200" />
                                <span asp-validation-for="Phone" class="text-red-600 text-sm"></span>
                            </div>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">City</label>
                            <select name="City" class="w-full border border-slate-300 rounded-md shadow-sm dark:bg-slate-700 dark:border-slate-600 dark:text-slate-200">
                                <option value="@Model.City">@Model.City (Current)</option>
                                <option>Cairo</option>
                                <option>Giza</option>
                                <option>Alexandria</option>
                                <option>Qalyubia</option>
                                <option>Sharqia</option>
                                <option>Dakahlia</option>
                                <option>Gharbia</option>
                                <option>Kafr El Sheikh</option>
                                <option>Monufia</option>
                                <option>Beheira</option>
                                <option>Fayoum</option>
                                <option>Beni Suef</option>
                                <option>Minya</option>
                                <option>Asyut</option>
                                <option>Sohag</option>
                                <option>Qena</option>
                                <option>Luxor</option>
                                <option>Aswan</option>
                                <option>Red Sea</option>
                                <option>South Sinai</option>
                                <option>North Sinai</option>
                                <option>Ismailia</option>
                                <option>Suez</option>
                                <option>Port Said</option>
                                <option>Damietta</option>
                                <option>New Valley</option>
                                <option>Matrouh</option>
                            </select>
                        </div>
              
                        <!-- Buttons -->
                        <div class="mt-10 flex justify-between items-center">
                            <a asp-action="Profile" class="px-6 py-2 border border-slate-300 dark:border-slate-500 rounded-md text-sm font-medium text-slate-700 dark:text-slate-200 hover:bg-slate-50 dark:hover:bg-slate-700">
                                Cancel
                            </a>
                            <button type="submit" class="px-8 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Success Message -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="save-status" class="mt-6">
                        <div class="bg-green-50 dark:bg-green-900/30 border border-green-200 dark:border-green-800 rounded-xl p-4 flex items-center">
                            <i class="material-icons text-green-600 dark:text-green-400 mr-3">check_circle</i>
                            <div>
                                <p class="text-green-800 dark:text-green-300 font-medium">Profile updated successfully!</p>
                                <p class="text-green-700 dark:text-green-400 text-sm">Your changes have been saved.</p>
                            </div>
                        </div>
                    </div>
                }

                <!-- Quick Tips -->
                <div class="mt-8 bg-gradient-to-r from-orange-50 to-orange-100 dark:from-orange-900/20 dark:to-orange-800/10 rounded-2xl p-6 border border-orange-200 dark:border-orange-800/30">
                    <div class="flex items-start">
                        <div class="w-12 h-12 rounded-full bg-orange-400 flex items-center justify-center mr-4 flex-shrink-0">
                            <i class="material-icons text-white">lightbulb</i>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900 dark:text-white mb-2">Quick Tips</h3>
                            <ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
                                <li class="flex items-start">
                                    <i class="material-icons text-orange-400 mr-2 text-sm">check_circle</i>
                                    Keep your profile information up-to-date for better service
                                </li>
                                <li class="flex items-start">
                                    <i class="material-icons text-orange-400 mr-2 text-sm">check_circle</i>
                                    A clear profile picture helps craftsmen recognize you
                                </li>
                                <li class="flex items-start">
                                    <i class="material-icons text-orange-400 mr-2 text-sm">check_circle</i>
                                    Your phone number must always be correct
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>

    <script>
        // IMAGE PREVIEW
        document.getElementById("profileImageInput").addEventListener("change", function (e) {
            const file = e.target.files[0];
            if (!file) return;

            if (!file.type.match('image.*')) {
                alert('Please select an image file.');
                return;
            }

            if (file.size > 5 * 1024 * 1024) {
                alert('Image size should be less than 5MB.');
                return;
            }

            const reader = new FileReader();
            reader.onload = ev => document.getElementById("profileImagePreview").src = ev.target.result;
            reader.readAsDataURL(file);
        });

        // AUTO REDIRECT AFTER SUCCESS
        const alertBox = document.getElementById("save-status");
        if (alertBox) {
            setTimeout(() => {
                window.location.href = "@Url.Action("Profile", "Client")";
            }, 5000);
        }
    </script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>