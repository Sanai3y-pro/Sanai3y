@model sanaiy.UI.ViewModels.ClientProfileViewModel
@{
    Layout = "_ClientLayout";
    ViewData["Title"] = "Profile";
}

<!DOCTYPE html>
<html class="light" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Sanaiy - Profile</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#0D47A1",
                        "background-light": "#F7F9FC",
                        "background-dark": "#121212",
                        prima: {
                            50: '#E3F2FD',
                            100: '#BBDEFB',
                            500: '#2196F3',
                            600: '#1E88E5',
                            700: '#0D47A1',
                        },
                    },
                    fontFamily: {
                        display: ["Roboto", "sans-serif"],
                    },
                    animation: {
                        'fade-in': 'fadeIn 0.5s ease-in-out',
                    },
                },
            },
        };
    </script>
    <style>
        .profile-pic-container {
            position: relative;
            display: inline-block;
            border-radius: 50%;
            box-shadow: 0 10px 25px rgba(13, 71, 161, 0.2);
            transition: all 0.3s ease;
        }
        .profile-pic-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(13, 71, 161, 0.3);
        }
        .profile-pic-container img {
            border: 5px solid white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        .tab-content {
            animation: fadeSlideIn 0.4s ease-out;
        }
        @@keyframes fadeSlideIn {
            from {
                opacity: 0;
                transform: translateX(10px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-gray-800 dark:text-gray-200">

    <main class="flex-grow mt-20">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="w-[85%] mx-auto">
                
                <!-- Profile Header -->
                <div class="bg-gradient-to-r from-prima-700 to-prima-600 rounded-2xl shadow-lg overflow-hidden mb-8 animate-fade-in">
                    <div class="p-8 text-white">
                        <div class="flex flex-col md:flex-row items-center md:items-start space-y-6 md:space-y-0 md:space-x-8">
                            
                            <!-- Avatar -->
                            <div class="profile-pic-container">
                                <img src="@(string.IsNullOrEmpty(Model.ProfileImageUrl) ? "/images/client-default.png" : (Model.ProfileImageUrl.StartsWith("/") ? Model.ProfileImageUrl : "/" + Model.ProfileImageUrl))"
                                     alt="Profile Picture"
                                     class="w-32 h-32 object-cover rounded-full">
                            </div>

                            <!-- Name & Info -->
                            <div class="text-center md:text-left flex-1">
                                <div class="flex flex-col md:flex-row md:items-center justify-between">
                                    <div>
                                        <h1 class="text-4xl font-bold mb-10">@Model.FullName</h1>
                                        <div class="flex items-center flex-wrap gap-2 mb-3">
                                            <span class="inline-flex items-center gap-1 bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-sm">
                                                <i class="material-icons text-sm">work</i>
                                                <span>Client</span>
                                            </span>
                                            <span class="inline-flex items-center gap-1 bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-sm">
                                                <i class="material-icons text-sm">location_on</i> @Model.LocationLabel
                                            </span>
                                        </div>
                                    </div>
                                    <div class="mt-4 md:mt-0">
                                        <a asp-controller="Client" asp-action="EditProfile"
                                           class="inline-flex items-center px-6 py-3 bg-white text-prima-700 rounded-xl font-semibold hover:bg-gray-100 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                                            Edit Profile <i class="material-icons ml-2">edit</i>
                                        </a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Profile Details -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    
                    <!-- Left Column: Tabs -->
                    <div class="lg:col-span-2 space-y-8">
                        <div class="bg-white dark:bg-slate-800 rounded-lg shadow-md border border-slate-200 dark:border-slate-700">
                            
                            <!-- Navigation Tabs -->
                            <div class="flex border-b border-gray-200 dark:border-gray-600">
                                <button class="flex-1 py-3 px-4 text-center font-medium bg-primary text-white" id="tab-booked-services">Bookings</button>
                                <button class="flex-1 py-3 px-4 text-center font-medium text-gray-500" id="tab-reviews">Reviews</button>
                            </div>

                            <div class="p-6">
                                <!-- Booked Services Tab Content -->
                                <div id="content-booked-services" class="tab-content">
                                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Booked Services</h3>
                                    <div class="space-y-3">
                                        @if (Model.BookedServices == null || !Model.BookedServices.Any())
                                        {
                                            <p class="text-sm text-gray-500">You don't have any bookings yet.</p>
                                        }
                                        else
                                        {
                                            @foreach (var booking in Model.BookedServices)
                                            {
                                                <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                                                    <div>
                                                        <div class="flex items-center gap-3 mb-2">
                                                            <div class="w-10 h-10 flex items-center justify-center bg-gray-300 text-white rounded-full">
                                                                @(string.IsNullOrEmpty(booking.ClientName) ? "?" : booking.ClientName.Substring(0, 1))

                                                            </div>
                                                            <p class="font-semibold text-gray-800 dark:text-gray-100">@booking.CraftsmanName</p>
                                                            @if (!string.IsNullOrEmpty(booking.StatusText))
                                                            {
                                                                <span class="@booking.StatusBadgeCss text-xs font-semibold px-2.5 py-0.5 rounded-full">
                                                                    @booking.StatusText
                                                                </span>
                                                            }
                                                        </div>
                                                        <p class="font-semibold text-gray-800 dark:text-gray-100">@booking.ServiceName</p>
                                                        <p class="text-sm text-gray-500 dark:text-gray-400">@booking.ShortDescription</p>
                                                    </div>
                                                    <div class="flex flex-col gap-2">
                                                        <button onclick="openBookingModal('@booking.Id')"
                                                                class="px-4 py-2 bg-primary text-white rounded-lg font-medium hover:bg-blue-800 transition-colors">
                                                            Details
                                                        </button>
                                                        @if (booking.ShowPaymentButton)
                                                        {
                                                            <a asp-controller="Payment" asp-action="Checkout" asp-route-bookingId="@booking.Id"
                                                               class="px-4 py-2 text-center bg-white border border-primary text-primary rounded-lg font-medium hover:bg-blue-50 transition-colors">
                                                                Payment
                                                            </a>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>

                                <!-- Reviews Tab Content -->
                                <div id="content-reviews" class="tab-content hidden">
                                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Reviews Given</h3>
                                    <div class="space-y-4">
                                        @if (Model.Reviews == null || !Model.Reviews.Any())
                                        {
                                            <p class="text-sm text-gray-500">You haven't written any reviews yet.</p>
                                        }
                                        else
                                        {
                                            @foreach (var review in Model.Reviews)
                                            {
                                                <div class="border-b border-gray-200 dark:border-gray-600 pb-4">
                                                    <div class="flex items-center justify-between mb-2">
                                                        <p class="font-semibold text-gray-800 dark:text-gray-100">@review.ClientName – @review.ServiceName</p>
                                                        <div class="flex text-yellow-400 text-sm">
                                                            @{
                                                                var filled = review.Rating;
                                                                var empty = 5 - filled;
                                                            }
                                                            @for (int i = 0; i < filled; i++)
                                                            {
                                                                <span>★</span>
                                                            }
                                                            @for (int i = 0; i < empty; i++)
                                                            {
                                                                <span class="text-gray-300">★</span>
                                                            }
                                                        </div>
                                                    </div>
                                                    <p class="text-gray-700 dark:text-gray-300">@review.Comment</p>
                                                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">@review.CreatedAt.ToString("MMMM dd, yyyy")</p>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <!-- Right Column: Contact & Find Services -->
                    <div class="space-y-8">
                        <!-- Contact Information -->
                        <div class="bg-white dark:bg-slate-800 rounded-lg shadow-md border border-slate-200 dark:border-slate-700 p-6">
                            <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Contact Information</h2>
                            <div class="space-y-3">
                                <div class="flex items-center">
                                    <i class="material-icons text-primary mr-3">phone</i>
                                    <span class="text-gray-700 dark:text-gray-300">@Model.Phone</span>
                                </div>
                                <div class="flex items-center">
                                    <i class="material-icons text-primary mr-3">email</i>
                                    <span class="text-gray-700 dark:text-gray-300">@Model.Email</span>
                                </div>
                                <div class="flex items-center">
                                    <i class="material-icons text-primary mr-3">location_on</i>
                                    <span class="text-gray-700 dark:text-gray-300">@Model.LocationLabel</span>
                                </div>
                            </div>
                        </div>

                        <!-- Find Services Button -->
                        <div class="bg-primary text-white rounded-lg p-6 text-center">
                            <h3 class="text-lg font-semibold mb-2">Find Services</h3>
                            <p class="text-sm mb-4">Browse and book services from trusted craftsmen.</p>
                            <a asp-controller="Category" asp-action="Index"
                               class="inline-block px-6 py-2 bg-white text-primary rounded-lg font-medium hover:bg-gray-100 transition-colors">
                                Browse Services
                            </a>
                        </div>
                    </div>

                </div>

                <!-- Modal container -->
                <div id="modalContainer"></div>

            </div>
        </div>
    </main>

    <!-- Booking Details Modal -->
    <div class="fixed inset-0 bg-black bg-opacity-60 z-40 backdrop-blur-sm" id="booking-details-modal" style="display: none;"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4" id="booking-details-modal-content" style="display: none;">
        <div class="relative bg-white dark:bg-slate-800 rounded-lg shadow-xl w-full max-w-md p-8">
            <button id="close-booking-modal-btn" class="absolute top-4 right-4 text-gray-500 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 transition-colors">
                <span class="material-icons text-2xl">close</span>
            </button>
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6">Booking Details</h2>
            <div class="space-y-4">
                <div>
                    <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Craftsman:</p>
                    <p class="text-gray-800 dark:text-gray-100" id="booking-craftsman">-</p>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Service:</p>
                    <p class="text-gray-800 dark:text-gray-100" id="booking-service">-</p>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Location:</p>
                    <p class="text-gray-800 dark:text-gray-100" id="booking-location">-</p>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Date:</p>
                    <p class="text-gray-800 dark:text-gray-100" id="booking-date">-</p>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Status:</p>
                    <p class="text-gray-800 dark:text-gray-100" id="booking-status">-</p>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Notes:</p>
                    <p class="text-gray-800 dark:text-gray-100" id="booking-notes">-</p>
                </div>
            </div>
            <div class="flex justify-end items-center mt-8 space-x-3">
                <button id="cancel-booking-btn" class="px-6 py-2 border rounded-md text-gray-800 dark:text-gray-200 border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">Close</button>
            </div>
        </div>
    </div>

    <script>
        // Tab functionality with animations
        const tabButtons = document.querySelectorAll('[id^="tab-"]');
        const tabContents = document.querySelectorAll('.tab-content');

        tabButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Remove active class from all tabs
                tabButtons.forEach(btn => {
                    btn.classList.remove('bg-primary', 'text-white');
                    btn.classList.add('text-gray-500');
                });
                // Add active class to clicked tab
                this.classList.remove('text-gray-500');
                this.classList.add('bg-primary', 'text-white');

                // Hide all tab contents
                tabContents.forEach(content => {
                    content.classList.add('hidden');
                });
                
                // Show corresponding tab content
                const tabId = this.id.replace('tab-', 'content-');
                const targetContent = document.getElementById(tabId);
                targetContent.classList.remove('hidden');
                
                // Trigger reflow to restart animation
                void targetContent.offsetWidth;
            });
        });

        // Booking Details Modal functionality
        const bookingDetailsModal = document.getElementById('booking-details-modal');
        const bookingDetailsModalContent = document.getElementById('booking-details-modal-content');
        const closeBookingModalBtn = document.getElementById('close-booking-modal-btn');
        const cancelBookingBtn = document.getElementById('cancel-booking-btn');

        // Function to open booking modal
        function openBookingModal(bookingId) {
            // في الحالة الحقيقية، هتجيب البيانات من الـ Backend
            // دلوقتي هنعرض بيانات تجريبية أو نعمل Ajax call
            
            // Show modal
            bookingDetailsModal.style.display = 'block';
            bookingDetailsModalContent.style.display = 'flex';

            // هنا تقدري تعملي Ajax request لجلب التفاصيل
            fetch(`/Booking/GetBookingDetails/${bookingId}`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById('booking-craftsman').textContent = data.craftsmanName || '-';
                    document.getElementById('booking-service').textContent = data.serviceName || '-';
                    document.getElementById('booking-location').textContent = data.location || '-';
                    document.getElementById('booking-date').textContent = data.date || '-';
                    document.getElementById('booking-status').textContent = data.status || '-';
                    document.getElementById('booking-notes').textContent = data.notes || '-';
                })
                .catch(error => {
                    console.error('Error loading booking details:', error);
                });
        }

        // Function to close booking modal
        function closeBookingDetailsModal() {
            bookingDetailsModal.style.display = 'none';
            bookingDetailsModalContent.style.display = 'none';
        }

        // Event listeners for closing modal
        closeBookingModalBtn.addEventListener('click', closeBookingDetailsModal);
        cancelBookingBtn.addEventListener('click', closeBookingDetailsModal);
        bookingDetailsModal.addEventListener('click', closeBookingDetailsModal);

        // Prevent modal content click from closing the modal
        bookingDetailsModalContent.addEventListener('click', function(e) {
            e.stopPropagation();
        });
    </script>

</body>
</html>