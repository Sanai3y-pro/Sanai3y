@model sanaiy.UI.ViewModels.ViolationViewModel
@{
    ViewData["Title"] = "Sanaiy - Report Violation";
    Layout = "_ClientLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

    <!-- Tailwind CSS via CDN -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#0D47A1",
                        "background-light": "#F7F9FC",
                        "background-dark": "#121212",
                        "footer-bg": "#1a253c",
                        "footer-bg-darker": "#0b3b9a",
                    },
                    fontFamily: {
                        display: ["Roboto", "sans-serif"],
                    },
                    borderRadius: {
                        DEFAULT: "0.5rem",
                    },
                },
            },
        };
    </script>

    <style>
        /* Optional: Custom styles for the page */
        body {
            font-family: 'Roboto', sans-serif;
        }

        .primary {
            background-color: #0D47A1;
        }

            .primary:hover {
                background-color: #0B3B9A;
            }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-display flex flex-col min-h-screen">
    <!-- Header -->
   

    <main class="flex-grow mt-20">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="max-w-4xl mx-auto">
                <div class="bg-white dark:bg-slate-800 rounded-lg shadow-md border border-slate-200 dark:border-slate-700 p-8">
                    <h2 class="text-3xl font-bold text-slate-800 dark:text-slate-100 mb-8">Report a Violation</h2>
                    <p class="text-slate-600 dark:text-slate-400 mb-6">
                        Help us maintain a safe and fair platform by reporting any violations. Your report will be reviewed confidentially.
                    </p>

                    @using (Html.BeginForm("Violation", "Client", FormMethod.Post))
                    {
                        <div class="space-y-6">
                            <!-- Violation Type -->
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1" for="ViolationType">Title of Violation</label>
                                <select asp-for="ViolationType" class="w-full border border-slate-300 rounded-md shadow-sm focus:ring-primary focus:border-primary dark:bg-slate-700 dark:border-slate-600 dark:text-slate-200">
                                    <option disabled selected>Select a violation type</option>
                                    <option value="fraud">Fraud or Scam</option>
                                    <option value="harassment">Harassment or Abuse</option>
                                    <option value="quality">Poor Service Quality</option>
                                    <option value="safety">Safety Concerns</option>
                                    <option value="contract">Contract Breach</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>

                            <!-- Involved Party -->
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1" for="InvolvedParty">Involved Party (Craftsman/Service Provider)</label>
                                <input asp-for="InvolvedParty" placeholder="Enter name or ID of the craftsman"
                                       class="w-full border border-slate-300 rounded-md shadow-sm focus:ring-primary focus:border-primary dark:bg-slate-700 dark:border-slate-600 dark:text-slate-200 dark:placeholder-slate-400" />
                            </div>

                            <!-- Date of Incident -->
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1" for="IncidentDate">Date of Incident</label>
                                <input asp-for="IncidentDate" type="date"
                                       class="w-full border border-slate-300 rounded-md shadow-sm focus:ring-primary focus:border-primary dark:bg-slate-700 dark:border-slate-600 dark:text-slate-200" />
                            </div>

                            <!-- Description -->
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1" for="Description">Detailed Description</label>
                                <textarea asp-for="Description" rows="6" placeholder="Please provide as much detail as possible about the violation..."
                                          class="w-full border border-slate-300 rounded-md shadow-sm focus:ring-primary focus:border-primary dark:bg-slate-700 dark:border-slate-600 dark:text-slate-200 dark:placeholder-slate-400"></textarea>
                            </div>

                            <!-- Buttons -->
                            <div class="mt-10 flex justify-between items-center">
                                <a href="/Client/Profile" class="px-6 py-2 border border-slate-300 dark:border-slate-500 rounded-md text-sm font-medium text-slate-700 dark:text-slate-200 hover:bg-slate-50 dark:hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary dark:focus:ring-offset-slate-800">
                                    Cancel
                                </a>
                                <button type="submit"
                                        class="px-8 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-orange-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary dark:focus:ring-offset-slate-800">
                                    Submit Report
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>
</body>
</html>