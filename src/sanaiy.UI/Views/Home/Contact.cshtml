@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Sanaiy - Contact Us</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Google Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: #005A9C !important;
        }

        .bg-custom-blue {
            background-color: #0D47A1;
        }

        .darker-custom-blue {
            background-color: #0b3b9a;
        }

        .text-orange {
            color: #fb923c;
        }
    </style>
</head>

<body class="bg-light">

    <!-- ================= HEADER ================= -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <span class="material-icons me-2 text-primary fs-1">construction</span>
                Sanaiy
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="material-icons">menu</span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav gap-3">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-orange" href="/Home/Contact">Contact Us</a>
                    </li>
                </ul>

                <a asp-controller="UserAuth" asp-action="Login" class="btn btn-primary ms-4 px-4">
                    Sign In
                </a>
            </div>
        </div>
    </nav>
    <!-- ================= END HEADER ================= -->
    <!-- ================= CONTACT SECTION ================= -->
    <div class="container my-5">
        <h1 class="text-center mb-4">Contact Us</h1>
        <p class="text-center mb-5 w-75 mx-auto">
            Feel free to reach out to us for any inquiries, service requests, or collaboration opportunities.
            Our team is always ready to assist you.
        </p>

        <div class="row g-4">
            <!-- Contact Form -->
            <div class="col-md-6">
                <div class="card shadow-sm p-4">
                    <h4 class="mb-3">Send a Message</h4>

                    <form>
                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" placeholder="Enter your name" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email Address</label>
                            <input type="email" class="form-control" placeholder="Enter your email" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Message</label>
                            <textarea class="form-control" rows="5" placeholder="Write your message..."></textarea>
                        </div>

                        <button class="btn btn-primary px-4">Send</button>
                    </form>
                </div>
            </div>

            <!-- Info Cards -->
            <div class="col-md-6">
                <div class="row g-4">

                    <!-- Address -->
                    <div class="col-12">
                        <div class="card shadow-sm p-4 h-100">
                            <h5 class="card-title">Address</h5>
                            <p class="card-text">123 Service Lane, Cairo, Egypt</p>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="col-12">
                        <div class="card shadow-sm p-4 h-100">
                            <h5 class="card-title">Email</h5>
                            <p class="card-text">
                                <a href="mailto:contact@sanaiy.com">contact@sanaiy.com</a>
                            </p>
                        </div>
                    </div>

                    <!-- Phone -->
                    <div class="col-12">
                        <div class="card shadow-sm p-4 h-100">
                            <h5 class="card-title">Phone</h5>
                            <p class="card-text">
                                <a href="tel:+201234567890">+20 123 456 7890</a>
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
    <!-- ================= END CONTACT ================= -->
    <!-- ================= FOOTER ================= -->
    <footer class="bg-custom-blue text-light pt-5 mt-5">
        <div class="container">
            <div class="row g-4">

                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-3">
                        <span class="material-icons text-orange fs-1 me-2">construction</span>
                        <h3 class="text-white fw-bold">Sanaiy</h3>
                    </div>
                    <p>Your reliable partner for professional home services.</p>
                </div>

                <div class="col-md-2">
                    <h5 class="text-white mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/Home" class="text-light text-decoration-none">Home</a></li>
                        <li><a href="/Home/About" class="text-light text-decoration-none">About</a></li>
                        <li><a href="/Category" class="text-light text-decoration-none">Services</a></li>
                        <li><a href="/Home/Contact" class="text-light text-decoration-none">Contact</a></li>
                    </ul>
                </div>

                <div class="col-md-3">
                    <h5 class="text-white mb-3">Services</h5>
                    <ul class="list-unstyled">
                        <li>Plumbing</li>
                        <li>Electrical</li>
                        <li>Carpentry</li>
                        <li>AC Repair</li>
                    </ul>
                </div>

                <div class="col-md-3">
                    <h5 class="text-white mb-3">Contact</h5>
                    <p><strong>Address:</strong> 123 Service Lane, Cairo</p>
                    <p><strong>Email:</strong> contact@sanaiy.com</p>
                    <p><strong>Phone:</strong> +20 123 456 7890</p>
                </div>

            </div>
        </div>

        <div class="darker-custom-blue text-center py-2 mt-4">
            © 2024 Sanaiy. All Rights Reserved.
        </div>
    </footer>
    <!-- ================= END FOOTER ================= -->

</body>
</html>