@model sanaiy.BLL.DTOs.Auth.LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sanaiy - Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 flex items-center justify-center min-h-screen">

    <div class="w-full max-w-md bg-white shadow-xl rounded-2xl p-8">

        <!-- Title -->
        <h1 class="text-3xl font-bold text-blue-600 text-center mb-1">Sanaiy</h1>
        <p class="text-center text-gray-600 mb-8">Welcome back! Sign in to your account.</p>

        <!-- Form -->
        <form asp-action="Login" method="post" class="space-y-5">

            <!-- Email -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">Email Address</label>
                <input asp-for="Email" type="email"
                       class="w-full px-4 py-3 border rounded-lg focus:ring focus:ring-blue-300" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <!-- Password -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">Password</label>
                <input asp-for="Password" type="password"
                       class="w-full px-4 py-3 border rounded-lg focus:ring focus:ring-blue-300" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <!-- Remember + Forgot -->
            <div class="flex justify-between items-center text-sm">
                <label class="flex items-center gap-2">
                    <!--<input asp-for="RememberMe" type="checkbox" class="w-4 h-4">
                    <span>Keep me logged in</span>-->
                </label>

                <a href="#" class="text-blue-600 hover:underline">Forgot Password?</a>
            </div>

            <!-- Submit -->
            <button type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-lg font-semibold transition">
                Sign In
            </button>


            @if (!ViewData.ModelState.IsValid)
            {
                <div class="bg-red-100 text-red-700 p-3 rounded-lg mb-4">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            <!-- Create Account -->
            <p class="text-center text-sm mt-4">
                Don't have an account?
                <a href="/UserAuth/RegisterStep1" class="text-blue-600 hover:underline font-semibold">Create Account</a>
            </p>

        </form>
    </div>

    <!-- Validation Scripts -->
    <partial name="_ValidationScriptsPartial" />

</body>
</html>
