@* <!-- /Views/Shared/header.cshtml -->
@{
    var isCraftsman = User?.IsInRole("craftsman") ?? false;
}

@if (isCraftsman)
{
    <!-- Header for Craftsman -->
    <header class="fixed top-0 left-0 right-0 bg-white shadow-sm z-40">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-20">
                <!-- Logo -->
                <div class="flex items-center space-x-2">
                    <span class="material-icons text-[#0D47A1] text-4xl">construction</span>
                    <a class="text-2xl font-bold text-[#0D47A1]" asp-controller="Craftsman" asp-action="Home">
                        Sanaiy
                    </a>
                </div>

                <!-- Navigation -->
                <nav class="hidden md:flex space-x-8">
                    <a class="text-base font-medium" asp-controller="Craftsman" asp-action="Home">Home</a>
                    <a class="text-base font-medium hover:text-orange-400 transition-colors" href="/UserAuth/Logout">Log out</a>
                </nav>

                <!-- User Info -->
                <div class="flex items-center space-x-3">
                    <span class="text-gray-700">Welcome, @User.Identity?.Name</span>
                </div>
            </div>
        </div>
    </header>

    <!-- Spacer for fixed header -->
    <div style="height: 80px;"></div>
}
else
{
    <!-- Header for Clients/Public -->
    <header class="bg-white shadow">
        <div class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <!-- Logo -->
                <div class="flex items-center space-x-2">
                    <span class="material-icons text-[#0D47A1] text-4xl">construction</span>
                    <a class="text-2xl font-bold text-[#0D47A1]" asp-controller="Home" asp-action="Index">
                        Sanaiy
                    </a>
                </div>

                <!-- Navigation -->
                <nav class="flex space-x-6">
                    <a class="text-base font-medium hover:text-orange-400 transition-colors"
                       asp-controller="Home" asp-action="Index">Home</a>
                    <a class="text-base font-medium hover:text-orange-400 transition-colors"
                       asp-controller="Services" asp-action="Index">Services</a>
                    <a class="text-base font-medium hover:text-orange-400 transition-colors"
                       href="/Home/Contact">Contact</a>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <a class="text-base font-medium hover:text-orange-400 transition-colors"
                           href="/UserAuth/Logout">Logout</a>
                    }
                    else
                    {
                        <a class="text-base font-medium hover:text-orange-400 transition-colors"
                           href="/UserAuth/Login">Login</a>
                    }
                </nav>
            </div>
        </div>
    </header>
} *@