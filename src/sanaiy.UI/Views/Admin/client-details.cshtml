@model sanaiy.BLL.DTOs.Client.ClientProfileDto
<div class="modal-container fixed inset-0 z-50 flex items-center justify-center" role="dialog" aria-modal="true">
    <div class="modal-backdrop absolute inset-0 bg-black opacity-50"></div>

    <div class="modal-dialog relative bg-white dark:bg-gray-800 rounded-lg shadow-2xl overflow-hidden max-w-4xl w-full mx-4 z-10" style="max-height:90vh;">
        <header class="bg-primary text-white flex justify-between items-center p-4">
            <div class="flex items-center gap-3">
                <span class="material-icons-outlined">account_circle</span>
                <h1 class="text-xl font-semibold">Client Details</h1>
            </div>
            <a href="/Admin/Clients" class="text-white hover:text-gray-200 transition-colors" aria-label="Close">
                <span class="material-icons-outlined">close</span>
            </a>
        </header>

        <main class="p-6 md:p-8 overflow-auto">
            <div class="border-b border-gray-200 dark:border-gray-700 mb-6">
                <nav aria-label="Tabs" class="flex space-x-8 -mb-px">
                    <a class="flex items-center gap-2 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm text-primary border-primary" href="#">
                        <span class="material-icons-outlined text-base">person</span>
                        Personal Information
                    </a>
                </nav>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
                <div class="md:col-span-3">
                    <div class="space-y-6">
                        <div>
                            <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100">@Model.FullName</h2>
                            <p class="text-sm text-gray-500 dark:text-gray-400">ID: @Model.Id</p>
                        </div>
                        <div>
                            @{
                                var status = (Model.Status ?? string.Empty).ToLower();
                                var badgeClass = status.Contains("active") ? "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200" : "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200";
                            }
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @badgeClass">@Model.Status</span>
                        </div>
                        <div class="space-y-4 text-sm">
                            <div class="flex">
                                <p class="w-24 font-semibold text-gray-600 dark:text-gray-300">Email:</p>
                                <p class="text-gray-800 dark:text-gray-100">@Model.Email</p>
                            </div>
                            <div class="flex">
                                <p class="w-24 font-semibold text-gray-600 dark:text-gray-300">Phone:</p>
                                <p class="text-gray-800 dark:text-gray-100">@Model.Phone</p>
                            </div>
                            <div class="flex">
                                <p class="w-24 font-semibold text-gray-600 dark:text-gray-300">Created:</p>
                                <p class="text-gray-800 dark:text-gray-100">@Model.CreatedAt.ToString("MMMM d, yyyy hh:mm tt")</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="md:col-span-2">
                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-1 gap-4">
                        <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg text-center">
                            <p class="text-2xl font-bold text-primary">@Model.TotalBookings</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">Total Bookings</p>
                        </div>
                        <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg text-center">
                            <p class="text-2xl font-bold text-green-600 dark:text-green-400">@Model.CompletedBookings</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">Completed Bookings</p>
                        </div>
                        <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg text-center col-span-2 sm:col-span-1 md:col-span-1">
                            <p class="text-2xl font-bold text-blue-600 dark:text-blue-400">@("$")+"0.00"</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">Total Spent</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
                <h3 class="flex items-center gap-2 text-lg font-semibold text-gray-700 dark:text-gray-200 mb-4">
                    <span class="material-icons-outlined text-xl">location_on</span>
                    Addresses (@(Model.Location ?? "-"))
                </h3>
                <div class="text-sm space-y-2">
                    <div class="p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                        <p class="text-gray-700 dark:text-gray-200">@Model.Location</p>
                    </div>
                </div>
            </div>
        </main>

        <footer class="bg-gray-50 dark:bg-gray-900/50 px-6 py-4 flex justify-end">
            <a href="/Admin/Clients" class="bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 font-medium py-2 px-6 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">Close</a>
        </footer>
    </div>
</div>
