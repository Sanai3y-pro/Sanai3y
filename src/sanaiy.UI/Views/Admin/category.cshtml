@using sanaiy.UI.ViewModels
@model IEnumerable<CategoryListItemViewModel>

<main class="flex-1 flex flex-col">

    <div class="flex-1 p-6 overflow-y-auto">
        <div class="bg-card-light dark:bg-card-dark p-6 rounded-lg shadow-sm">

            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
                <h3 class="text-2xl font-bold text-text-light dark:text-text-dark">Category List</h3>

                <div class="flex flex-col sm:flex-row items-start sm:items-center gap-3 mt-4">

                    <!-- FILTER SELECT (after removing the 5 badge) -->
                    <div class="relative">
                        <select class="fancy-select bg-background-light dark:bg-background-dark border border-border-light dark:border-border-dark text-sm py-2 pl-3 pr-10 rounded-full shadow-sm focus:ring-1 focus:ring-primary">
                            <option>All Categories</option>
                            <option>Active</option>
                            <option>Inactive</option>
                        </select>
                    </div>

                    <div class="relative w-full sm:w-64">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-subtext-light dark:text-subtext-dark">search</span>
                        <input class="w-full bg-background-light dark:bg-background-dark border border-border-light dark:border-border-dark text-sm rounded py-2 pl-10 pr-4 focus:ring-1 focus:ring-primary placeholder-subtext-light dark:placeholder-subtext-dark"
                               placeholder="Search categories..." type="text" />
                    </div>

                </div>

                <button data-page="add-category" class="flex items-center bg-primary text-white text-sm font-medium px-4 py-2 rounded-full shadow hover:bg-blue-700">
                    <span class="material-symbols-outlined mr-2">add</span> Add Category
                </button>
            </div>

            <!-- TABLE -->
            <div class="overflow-x-auto">
                <div class="overflow-hidden rounded-t-lg">
                    <table class="w-full text-sm text-left border-collapse">
                        <thead class="bg-[#0A4EA3] text-white uppercase text-xs">
                            <tr>
                                <th class="px-6 py-3">Name</th>
                                <th class="px-6 py-3">Description</th>
                                <th class="px-6 py-3">Image</th>
                                <th class="px-6 py-3">Status</th>
                                <th class="px-6 py-3 text-center">Action</th>
                            </tr>
                        </thead>

                        <tbody class="bg-white dark:bg-card-dark">

                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr class="border-b border-border-light dark:border-border-dark">
                                        <td class="px-6 py-4 font-medium">@item.Name</td>
                                        <td class="px-6 py-4">@item.Description</td>
                                        <td class="px-6 py-4">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" alt="@item.Name" class="h-8 w-8 rounded" />
                                            }
                                            else
                                            {
                                                <span class="material-symbols-outlined text-orange-500">category</span>
                                            }
                                        </td>
                                        <td class="px-6 py-4">
                                            @if (item.IsActive)
                                            {
                                                <span class="px-3 py-1 text-xs rounded-full bg-green-100 text-green-700">Active</span>
                                            }
                                            else
                                            {
                                                <span class="px-3 py-1 text-xs rounded-full bg-red-100 text-red-700">Inactive</span>
                                            }
                                        </td>
                                        <td class="px-6 py-4 text-center">
                                            <button class="text-primary hover:text-blue-700" data-id="@item.Id"><span class="material-symbols-outlined">edit</span></button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td class="px-6 py-4" colspan="5">No categories found.</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</main>
