@{
    Layout = null;
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard Main View Updated</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>

    <!-- ÊÚÏíá áíäß ÇáÝæäÊ ßÇä Ýíå = ÒíÇÏÉ æãÓÇÝÇÊ -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0&display=swap" rel="stylesheet" />

    <script>
        tailwind.config = {
          darkMode: "class",
          theme: {
            extend: {
              colors: {
                primary: "#2563EB",
                "background-light": "#F3F4F6",
                "background-dark": "#111827",
              },
              fontFamily: {
                display: ["Roboto", "sans-serif"],
              },
              borderRadius: {
                DEFAULT: "0.5rem",
              },
            },
          },
        };
    </script>

    <style>
        .material-icons {
            font-size: 20px;
        }

        .material-symbols-outlined {
            font-size: 20px;
            vertical-align: middle;
            font-variation-settings: 'FILL' 1;
        }

        .sidebar-transition {
            transition: transform .2s ease, opacity .2s ease;
        }

        .rotate-180 {
            transform: rotate(180deg);
        }
    </style>
</head>
<body class="font-display bg-background-light dark:bg-background-dark text-gray-800 dark:text-gray-200">
    <div class="flex h-screen">
        <!-- SIDEBAR -->
        <aside id="sidebar" class="w-64 bg-primary text-white flex flex-col fixed h-full sidebar-transition">
            <div class="px-6 py-4 flex items-center space-x-2">
                <span class="material-icons text-4xl">handyman</span>
                <h1 class="text-3xl font-bold">Sanaiy</h1>
            </div>

            <nav class="flex-1 px-4 space-y-2">
                <div>
                    <h2 class="px-4 py-2 text-xs font-semibold text-blue-200 uppercase tracking-wider">Main</h2>
                    <a data-page="dashboard" class="flex items-center px-4 py-2 text-sm font-medium bg-blue-700 rounded-lg" href="#">
                        <span class="material-icons mr-3">dashboard</span> Dashboard
                    </a>
                    <a data-page="bookings" class="flex items-center px-4 py-2 text-sm font-medium hover:bg-blue-700 rounded-lg" href="#">
                        <span class="material-icons mr-3">book</span> Bookings
                    </a>
                </div>

                <div>
                    <h2 class="px-4 py-2 text-xs font-semibold text-blue-200 uppercase tracking-wider">Service</h2>
                    <a data-page="category" class="flex items-center px-4 py-2 text-sm font-medium hover:bg-blue-700 rounded-lg" href="#">
                        <span class="material-icons mr-3">category</span> Category
                    </a>
                    <a data-page="services" href="/Admin/Dashboard?page=services" class="flex items-center px-4 py-2 text-sm font-medium hover:bg-blue-700 rounded-lg">
                        <span class="material-icons mr-3">inventory_2</span> Services
                    </a>
                </div>

                <div>
                    <h2 class="px-4 py-2 text-xs font-semibold text-blue-200 uppercase tracking-wider">User Management</h2>

                    <!-- Craftsmen toggle button -->
                    <button id="craftsmenBtn"
                            aria-expanded="false"
                            class="w-full flex items-center justify-between px-4 py-2 text-sm font-medium hover:bg-blue-700 rounded-lg focus:outline-none"
                            type="button">
                        <div class="flex items-center">
                            <span class="material-icons mr-3">handyman</span>
                            <span>Craftsmen</span>
                        </div>
                        <span id="craftsmenArrow" class="material-icons text-sm transition-transform">arrow_drop_down</span>
                    </button>

                    <!-- Craftsmen submenu -->
                    <div id="craftsmenMenu" class="pl-8 mt-1 space-y-1 hidden">
                        <a data-page="craftmen" class="block text-sm font-medium text-blue-100 hover:text-white" href="#">All Craftsmen</a>
                        <a data-page="craftsmen-apps" class="block text-sm font-medium text-blue-100 hover:text-white" href="#">Applications</a>
                    </div>

                    <a data-page="clients" class="flex items-center px-4 py-2 text-sm font-medium hover:bg-blue-700 rounded-lg" href="#">
                        <span class="material-icons mr-3">groups</span> Clients
                    </a>
                </div>

                <div>
                    <h2 class="px-4 py-2 text-xs font-semibold text-blue-200 uppercase tracking-wider">Payment</h2>
                    <a data-page="transactions" class="flex items-center px-4 py-2 text-sm font-medium hover:bg-blue-700 rounded-lg" href="#">
                        <span class="material-icons mr-3">payment</span> Transactions
                    </a>
                    <a data-page="violations" class="flex items-center px-4 py-2 text-sm font-medium hover:bg-blue-700 rounded-lg" href="#">
                        <span class="material-icons mr-3">report_problem</span> (Violations)
                    </a>
                </div>

                <div>
                    <h2 class="px-4 py-2 text-xs font-semibold text-blue-200 uppercase tracking-wider">Analytics</h2>
                    <a data-page="analytics" class="flex items-center px-4 py-2 text-sm font-medium hover:bg-blue-700 rounded-lg" href="#">
                        <span class="material-icons mr-3">analytics</span> Analytics
                    </a>
                </div>
            </nav>

            <div class="p-4">
                <a href="/" class="text-sm text-blue-100 hover:underline">Back to site</a>
            </div>
        </aside>

        <!-- MAIN -->
        <main id="mainContent" class="flex-1 ml-64 transition-all duration-200">
            <header class="flex items-center justify-between p-6 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
                <button id="sidebarToggle" class="text-gray-600 dark:text-gray-300" aria-label="Toggle sidebar" type="button">
                    <span class="material-icons text-3xl">menu</span>
                </button>

                <div class="flex items-center space-x-4">
                    <img alt="User avatar" class="w-10 h-10 rounded-full"
                         src="https://lh3.googleusercontent.com/aida-public/AB6AXuD79ELI8WK_fz-s5p0mI-eMjD51GtLu92CpLGYMBeCe-DR5xxa1xrvT2gf--atRx4LJu0fMs8NnlWGeQzk8rhUgPiA1eY0DkpAwe4u7ALjzYXLUzG6LyFiGulV5_7aB7YvBplLrJEczvdCtwuBl3TgkNLvuGdll0Rsa7WcJH3hfExO51_yEG2C8BBsQ9BVxwROjuXdWoV5p7BbCjC8G7DMslfa5I4YQCNIsJ0BLmrh1rR4BQn3zYEDATsFoptNFIG_W6c2JKBS-Z8c" />
                </div>
            </header>

            <div class="p-6">
                <div id="pageContent" class="p-6">
                    <!-- content will be loaded here (dashboard by default) -->
                </div>
            </div>
        </main>
    </div>

    <!-- ÈÏá ÇáÓßÑÈÊ ÇáßÈíÑ¡ åäÓÊÎÏã ãáÝ js æÇÍÏ -->
    <script src="~/admin/js/admin-dashboard.js"></script>
</body>
</html>
