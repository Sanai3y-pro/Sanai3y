@* namespace sanaiy.UI.Views.Admin
{
<!-- Handyman statistics fragment: injected into `#pageContent` by the loader -->
<div class="modal-backdrop fixed inset-0 bg-black/40 z-40"></div>
<div class="modal-container fixed inset-0 z-50 flex items-center justify-center p-4 sm:p-6">
    <div class="modal-dialog relative w-full max-w-4xl bg-white dark:bg-gray-800 rounded-lg shadow-2xl overflow-y-auto" style="max-height:90vh;">
        <header class="flex items-center justify-between p-4 bg-blue-600 text-white rounded-t-lg">
            <div class="flex items-center gap-3">
                <span class="material-icons text-xl">edit</span>
                <h2 class="text-lg font-semibold">Handyman Details</h2>
            </div>
            <button data-close class="p-1 rounded-full hover:bg-white/20 transition-colors" aria-label="Close details">
                <span class="material-icons">close</span>
            </button>
        </header>
        <div class="flex-grow overflow-y-auto bg-white dark:bg-gray-800">
            <nav class="border-b border-gray-200 dark:border-gray-700 px-6">
                <ul class="flex -mb-px">
                    <li class="mr-1">
                        <a class="inline-flex items-center gap-2 px-4 py-3 text-gray-500 hover:text-gray-900 border-b-2 border-transparent font-medium text-sm transition-colors" href="#" data-page="handyman-details">
                            <span class="material-icons text-base">person</span>
                            Personal Information
                        </a>
                    </li>
                    <li class="mr-1">
                        <a class="inline-flex items-center gap-2 px-4 py-3 text-blue-600 border-b-2 border-blue-600 font-semibold text-sm" href="#" data-page="handyman-statistics">
                            <span class="material-icons text-base">bar_chart</span>
                            Statistics
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="p-6 space-y-8">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg border border-gray-200 dark:border-gray-700">
                        <div class="flex items-center gap-4">
                            <div class="bg-blue-100 dark:bg-blue-900 p-3 rounded-full">
                                <span class="material-symbols-outlined text-blue-600 dark:text-blue-300 text-2xl">construction</span>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-500">Total Services</p>
                                <p class="text-2xl font-bold text-gray-900 dark:text-gray-100">152</p>
                            </div>
                        </div>
                    </div>
                    <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg border border-gray-200 dark:border-gray-700">
                        <div class="flex items-center gap-4">
                            <div class="bg-green-100 dark:bg-green-900 p-3 rounded-full">
                                <span class="material-symbols-outlined text-green-600 dark:text-green-300 text-2xl">event_available</span>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-500">Total Booking</p>
                                <p class="text-2xl font-bold text-gray-900 dark:text-gray-100">$12,450</p>
                            </div>
                        </div>
                    </div>
                    <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg border border-gray-200 dark:border-gray-700">
                        <div class="flex items-center gap-4">
                            <div class="bg-yellow-100 dark:bg-yellow-900 p-3 rounded-full">
                                <span class="material-symbols-outlined text-yellow-600 dark:text-yellow-300 text-2xl">star</span>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-500">Avg. Rating</p>
                                <p class="text-2xl font-bold text-gray-900 dark:text-gray-100">4.8</p>
                            </div>
                        </div>
                    </div>
                </div>
                <section>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">Wallet</h3>
                    <div class="bg-gradient-to-br from-blue-600 to-blue-800 text-white p-6 rounded-lg shadow-lg flex items-center justify-between border border-gray-200">
                        <div>
                            <p class="text-base font-medium text-blue-200">Current Balance</p>
                            <p class="text-4xl font-bold tracking-tight mt-1">$3,000.00</p>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="material-symbols-outlined text-4xl text-blue-300 opacity-80">account_balance_wallet</span>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>

} *@
