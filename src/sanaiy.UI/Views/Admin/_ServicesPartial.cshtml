@model IEnumerable<sanaiy.BLL.DTOs.Service.ServiceListItemDto>
<div class="max-w-7xl mx-auto bg-white dark:bg-slate-800 rounded-lg shadow-sm p-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Service List</h1>
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-600 dark:text-gray-400" id="servicesTable">
            <thead class="text-xs text-white uppercase bg-primary">
                <tr>
                    <th class="px-6 py-3">Name</th>
                    <th class="px-6 py-3">Description</th>
                    <th class="px-6 py-3">Category</th>
                    <th class="px-6 py-3">Craftsman</th>
                    <th class="px-6 py-3">Rating</th>
                    <th class="px-6 py-3 text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model ?? Enumerable.Empty<sanaiy.BLL.DTOs.Service.ServiceListItemDto>())
                {
                    <tr class="bg-white dark:bg-slate-800 border-b dark:border-slate-700 hover:bg-gray-50 dark:hover:bg-slate-700/50" data-name="@s.ServiceName" data-description="@s.Description" data-craftsman="@s.CraftsmanName">
                        <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">@s.ServiceName</td>
                        <td class="px-6 py-4">@s.Description</td>
                        <td class="px-6 py-4">@s.CategoryName</td>
                        <td class="px-6 py-4">@s.CraftsmanName</td>
                        <td class="px-6 py-4">@s.CraftsmanRating</td>
                        <td class="px-6 py-4 text-center"><button class="text-primary hover:text-blue-700"><span class="material-icons-outlined">visibility</span></button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>