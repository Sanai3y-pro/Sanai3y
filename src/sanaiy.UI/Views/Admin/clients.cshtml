@model IEnumerable<sanaiy.BLL.DTOs.Client.ClientListItemDto>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Client Management</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
    <script>
        tailwind.config = {
          darkMode: "class",
          theme: {
            extend: {
              colors: {
                primary: "#0d6efd",
                "background-light": "#f8f9fa",
                "background-dark": "#1a202c",
              },
              fontFamily: {
                display: ["Roboto", "sans-serif"],
              },
              borderRadius: {
                DEFAULT: "0.375rem",
              },
            },
          },
        };
    </script>
</head>
<body class="font-display bg-background-light dark:bg-background-dark text-gray-800 dark:text-gray-200">
    <div class="min-h-screen p-4 sm:p-6 lg:p-8">
        <div class="max-w-7xl mx-auto">
            <header class="mb-6">
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Client Management</h1>
            </header>
            <div class="flex flex-col md:flex-row md:items-center gap-4 mb-6">
                <div class="relative w-full md:w-auto">
                    <select class="w-full md:w-48 appearance-none rounded-DEFAULT border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 py-2 pl-3 pr-10 text-base focus:border-primary focus:outline-none focus:ring-primary sm:text-sm">
                        <option>Status: All</option>
                        <option>Status: Active</option>
                        <option>Status: Inactive</option>
                    </select>
                    <span class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-2 text-gray-700 dark:text-gray-300">
                        <span class="material-icons-outlined text-xl">expand_more</span>
                    </span>
                </div>
                <div class="relative w-full md:w-64">
                    <input id="clientSearch" class="w-full rounded-DEFAULT border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 py-2 pl-4 pr-10 focus:border-primary focus:outline-none focus:ring-primary sm:text-sm" placeholder="Search by name or email" type="text" />
                    <span class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
                        <span class="material-icons-outlined text-gray-400">search</span>
                    </span>
                </div>
            </div>
            <div class="overflow-x-auto bg-white dark:bg-gray-800 rounded-lg shadow">
                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700" id="clientsTable">
                    <thead class="bg-blue-800">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider" scope="col">Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider" scope="col">Email</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider" scope="col">Phone</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider" scope="col">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider" scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                        @foreach (var c in Model ?? Enumerable.Empty<sanaiy.BLL.DTOs.Client.ClientListItemDto>())
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900 dark:text-white">@c.FullName</div>
                                    <div class="text-xs text-gray-500 dark:text-gray-400">ID: @c.Id</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@c.Email</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@c.Phone</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (c.IsActive)
                                    {
                                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200">Active</span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200">Inactive</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <div class="flex items-center space-x-2">
                                        <a href="/Admin/ClientDetails/@c.Id" class="p-2 rounded-md border border-teal-500 text-teal-500 hover:bg-teal-50 dark:hover:bg-teal-900/50 transition-colors" title="View">
                                            <span class="material-icons-outlined text-base">visibility</span>
                                        </a>
                                        <a href="/Admin/EditClient/@c.Id" class="p-2 rounded-md border border-blue-500 text-blue-500 hover:bg-blue-50 dark:hover:bg-blue-900/50 transition-colors" title="Edit">
                                            <span class="material-icons-outlined text-base">edit</span>
                                        </a>
                                        <form method="post" action="/Admin/DeleteClient" onsubmit="return confirm('Delete this client?');" class="inline">
                                            <input type="hidden" name="id" value="@c.Id" />
                                            <button type="submit" class="p-2 rounded-md border border-red-500 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/50 transition-colors" title="Delete">
                                                <span class="material-icons-outlined text-base">delete</span>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-6 flex justify-center">
                <!-- Simple pager placeholder (server side paging recommended) -->
            </div>
        </div>
    </div>

    <script>
        document.getElementById('clientSearch').addEventListener('input', function(e){
            var q = e.target.value.toLowerCase();
            var rows = document.querySelectorAll('#clientsTable tbody tr');
            rows.forEach(r => {
                var name = r.querySelector('td:nth-child(1)').innerText.toLowerCase();
                var email = r.querySelector('td:nth-child(2)').innerText.toLowerCase();
                r.style.display = (name.includes(q) || email.includes(q)) ? '' : 'none';
            });
        });
    </script>
</body>
</html>
